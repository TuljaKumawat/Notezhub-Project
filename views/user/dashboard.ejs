<%- include('../../partials/user/header.ejs')%>

<section id="dashboard">
  <div class="container-fluid mt-5 pt-5">
    <div class="row">
      <%- include('../../partials/user/left.ejs')%>
    </div>
  </div> 
</section>


      <section id="Uploadhere">
        <div class="container">
            <div class="row">
                <div class="col">
                  <a href="/user/addnotes" class="upload"><i class="bi bi-plus-circle-fill"></i></a>
                </div>
            </div>
          </div>
      </section>

      <section id="Notes">
        <h2 class="text-center">Your Notes</h2>
        <div class="container-fluid">
          <div class="row">
            <% if (notes.length > 0) { %>
                <% notes.forEach(note => { %>
                    <div class="col-md-3">
                        <div class="note-card">
                            <div class="card-body">
                              <div class="d-flex justify-content-between align-itmes-center">
                                <h5 class="card-title"><%= note.subject %></h5> 
                                <div>
                                  <a href="/user/updatenotes/<%= note._id %>"><i class="bi bi-pencil-fill me-2"></i></a>
                                  <a href="/user/deletenotes/<%= note._id %>" class="text-danger"><i class="bi bi-trash3-fill"></i></a>
                                </div>
                              </div>
                              <p class="card-text"><%= note.description %></p>
                                <a href="/download/<%= note.file %>" target="_blank" class="btn btn-primary">View Note</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center">No notes found!</p>
            <% } %>
        </div>
        </div>      
      </section>
      

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</div>
</body>
</html>